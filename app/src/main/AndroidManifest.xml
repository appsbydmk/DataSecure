<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appsbydmk.datasecure">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MainActivity" />
        <activity
            android:name=".activities.InfoActivity"
            android:label="@string/title_info" />
        <activity
            android:name=".activities.ProfileLoginActivity"
            android:label="@string/title_profile_login" />
        <activity
            android:name=".activities.UserDetailsActivity"
            android:label="@string/title_user_details"
            android:parentActivityName=".activities.SplashActivity" />
        <activity
            android:name=".activities.ProfileActivity"
            android:label="@string/title_profile_page" />
    </application>

</manifest>